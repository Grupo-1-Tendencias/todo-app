{
  "root": true,
  "parser": "babel-eslint",
  "extends": ["eslint:recommended", "plugin:node/recommended"],
  "env": {
    "mocha": true
  },
  "plugins": ["node"],
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": 2,
    "node/no-unsupported-features/es-syntax": 0,
    "node/no-unpublished-import": ["off"]
  }
}
